@model List<ECommerceMVC.ViewModels.GioHangItem>

<div class="container py-5">
    <h2 class="text-center text-success fw-bold mb-4">Thanh toán</h2>

    <table class="table table-bordered">
        <thead class="table-light text-center">
            <tr>
                <th>Tên hàng</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenHH</td>
                    <td class="text-end">@item.DonGia.ToString("N0") đ</td>
                    <td class="text-center">@item.SoLuong</td>
                    <td class="text-end">@item.ThanhTien.ToString("N0") đ</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mt-3">
        <h4 class="text-dark">
            Tổng tiền:
            <b class="text-danger">@ViewBag.TongTien.ToString("N0") đ</b>
        </h4>
    </div>

    <form action="/ThanhToan/XacNhan" method="post">
        <div class="mt-4 text-end">
            <button type="submit" class="btn btn-success px-4 py-2">
                Xác nhận thanh toán
            </button>
        </div>
    </form>
</div>
