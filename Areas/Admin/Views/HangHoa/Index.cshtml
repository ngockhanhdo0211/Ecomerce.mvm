@model IEnumerable<ECommerceMVC.Data.HangHoa>

<h2>Quản lý hàng hóa</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã HH</th>
            <th>Tên hàng hóa</th>
            <th>Đơn giá</th>
            <th>Hình</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHh</td>
                <td>@item.TenHh</td>
                <td>@item.DonGia.ToString("N0")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Hinh))
                    {
                        <img src="~/Hinh/HangHoa/@item.Hinh" style="height: 60px;" />
                    }
                </td>
                <td>
                    <a asp-controller="HangHoa" asp-action="ChiTiet" asp-route-id="@item.MaHh" class="btn btn-sm btn-info">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
