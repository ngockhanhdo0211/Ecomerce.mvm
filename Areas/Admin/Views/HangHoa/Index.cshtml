@model IEnumerable<ECommerceMVC.Data.HangHoa>

@{
    ViewData["Title"] = "Quản lý hàng hóa";
}

<h2>Quản lý hàng hóa</h2>

<p>
    <a asp-area="Admin" asp-controller="HangHoa" asp-action="Create" class="btn btn-success">+ Thêm mới</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã HH</th>
            <th>Tên hàng hóa</th>
            <th>Đơn giá</th>
            <th>Loại</th>
            <th>Nhà cung cấp</th>
            <th>Hình</th>
            <th style="width: 180px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHh</td>
                <td>@item.TenHh</td>
                <td>@String.Format("{0:N0} đ", item.DonGia)</td>
                <td>@item.MaLoaiNavigation?.TenLoai</td>
                <td>@item.MaNccNavigation?.TenCongTy</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Hinh))
                    {
                        <img src="~/Hinh/HangHoa/@item.Hinh" style="height: 60px;" />
                    }
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="HangHoa" asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-controller="HangHoa" asp-action="Details" asp-route-id="@item.MaHh" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-area="Admin" asp-controller="HangHoa" asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
